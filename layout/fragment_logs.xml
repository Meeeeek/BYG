<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logs"
    android:alpha="0.9"
    tools:context="michaelkim.byg.homeLogs">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView6"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="@string/missing_students"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/missingStudents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="2dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:maxLines="2"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:textColor="#FFFFFF"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/textView7"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/missingStudents"
        android:layout_below="@+id/missingStudents"
        android:layout_marginTop="8dp"
        android:text="@string/highlights"
        android:layout_alignEnd="@+id/missingStudents" />

    <EditText
        android:id="@+id/highlights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="2dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:maxLines="2"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:textColor="#FFFFFF"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/textView8"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/highlights"
        android:layout_below="@+id/highlights"
        android:layout_marginTop="8dp"
        android:text="@string/did_you_meet_the_small_group_goal_of_the_day_why_or_why_not"
        android:layout_alignEnd="@+id/highlights" />

    <EditText
        android:id="@+id/smallGroupGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="2dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:maxLines="2"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:textColor="#FFFFFF"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/textView9"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/smallGroupGoal"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/smallGroupGoal"
        android:text="@string/solutions_on_how_to_improve_small_group_time"
        android:layout_alignEnd="@+id/smallGroupGoal" />

    <EditText
        android:id="@+id/improveSGTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="2dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:maxLines="2"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:textColor="#FFFFFF"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/textView10"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_alignStart="@+id/improveSGTime"
        android:layout_below="@+id/improveSGTime"
        android:text="@string/who_did_you_meet_up_with_this_week"
        android:layout_alignEnd="@+id/improveSGTime" />

    <EditText
        android:id="@+id/meetup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_below="@+id/textView10"
        android:ems="10"
        android:inputType="textMultiLine"
        android:maxLines="2"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:textColor="#FFFFFF"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/textView11"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_alignStart="@+id/meetup"
        android:layout_below="@+id/meetup"
        android:text="@string/prayer_requests"
        android:layout_alignEnd="@+id/meetup" />

    <EditText
        android:id="@+id/prayerRequests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/meetup"
        android:layout_alignStart="@+id/textView11"
        android:layout_below="@+id/textView11"
        android:layout_marginTop="2dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:maxLines="2"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:textColor="#FFFFFF"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/submitLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="@string/submit" />

    <ImageView
        android:id="@+id/construction"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription=""
        android:visibility="invisible"
        app:srcCompat="@drawable/construction" />

</RelativeLayout>
