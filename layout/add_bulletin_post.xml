<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/postText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Text"
        android:inputType="textMultiLine"
        android:layout_below="@+id/subjectText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

    <Button
        android:id="@+id/post"
        style="@android:style/Widget.Holo.Button.Small"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/postText"
        android:layout_below="@+id/postText"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="39dp"
        android:elevation="0dp"
        android:fontFamily="monospace"
        android:onClick="postOntoBulletin"
        android:text="Post" />

    <Button
        android:id="@+id/addPicture"
        style="@android:style/Widget.Holo.Button.Small"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:fontFamily="monospace"
        android:text="Attach"
        android:layout_alignBaseline="@+id/post"
        android:layout_alignBottom="@+id/post"
        android:layout_alignStart="@+id/postText" />

    <EditText
        android:id="@+id/subjectText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="117dp"
        android:ems="10"
        android:hint="Subject"
        android:inputType="textPersonName"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/postText"
        android:layout_alignEnd="@+id/postText" />

</RelativeLayout>