<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/minigroupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="86dp"
        android:layout_marginTop="29dp"
        android:text="Ministry Group Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/participationMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/minigroupName"
        android:layout_below="@+id/minigroupName"
        android:layout_marginTop="22dp"
        android:text="You are not in this ministry group." />

    <ImageView
        android:id="@+id/mgIndicator"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="24dp"
        app:srcCompat="?android:attr/alertDialogIcon"
        android:layout_below="@+id/minigroupName"
        android:layout_toStartOf="@+id/participationMessage" />
</RelativeLayout>