<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/regiTextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:paddingBottom="25dp"
        android:text="REGISTER"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/mrName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/regiTextTitle"
        android:layout_marginStart="45dp"
        android:layout_marginTop="15dp"
        android:paddingBottom="40dp"
        android:text="Name :"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/mrEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mrName"
        android:layout_below="@+id/mrName"
        android:paddingBottom="40dp"
        android:text="Email :"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/mrPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mrEmail"
        android:layout_below="@+id/mrEmail"
        android:paddingBottom="40dp"
        android:text="Password :"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/mrGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mrPhone"
        android:layout_below="@+id/mrPhone"
        android:text="Grade :"
        android:paddingBottom="40dp"
        android:textSize="16sp"
        android:layout_alignEnd="@+id/mrName" />

    <TextView
        android:id="@+id/mrPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mrPassword"
        android:layout_below="@+id/mrPassword"
        android:paddingBottom="40dp"
        android:text="Phone Number :"
        android:textSize="16sp" />

    <Button
        android:id="@+id/regButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toHome"
        android:text="REGISTER"
        android:textSize="10sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp" />

    <EditText
        android:id="@+id/mrNameField"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingTop="5dp"
        android:layout_alignTop="@+id/mrName"
        android:layout_alignStart="@+id/mrEmailField" />

    <EditText
        android:id="@+id/mrEmailField"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/mrName"
        android:layout_alignStart="@+id/mrPasswordField" />

    <EditText
        android:id="@+id/mrPasswordField"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_alignTop="@+id/mrPassword"
        android:layout_toEndOf="@+id/mrPhone" />

    <Spinner
        android:id="@+id/mrGradeSpinner"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginStart="11dp"
        android:layout_below="@+id/mrPhone"
        android:layout_toEndOf="@+id/registrationCode" />

    <EditText
        android:id="@+id/mrPhoneField"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:layout_alignTop="@+id/mrPhone"
        android:layout_toEndOf="@+id/mrPhone" />

    <TextView
        android:id="@+id/registrationCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mrGrade"
        android:layout_below="@+id/mrGrade"
        android:text="Registration Code :"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/rcField"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_alignBaseline="@+id/registrationCode"
        android:layout_alignBottom="@+id/registrationCode"
        android:layout_alignStart="@+id/mrGradeSpinner" />

</RelativeLayout>