<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/studentSelection"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="28dp"
        android:text="S"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/mentorSelection"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/studentSelection"
        android:layout_centerHorizontal="true"
        android:text="M"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/pastorSelection"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="47dp"
        android:text="P"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/mentorSelection"
        android:layout_alignBottom="@+id/mentorSelection"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/regTypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mentorSelection"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="x Registration"
        android:textAllCaps="true" />

    <TextView
        android:id="@+id/rName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:text="Name: "
        android:layout_below="@+id/regTypeText"
        android:layout_alignStart="@+id/studentSelection" />

    <TextView
        android:id="@+id/rGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/rName"
        android:layout_below="@+id/rName"
        android:layout_marginTop="27dp"
        android:text="Grade:" />

    <TextView
        android:id="@+id/rBirthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/rGrade"
        android:layout_below="@+id/rGrade"
        android:layout_marginTop="27dp"
        android:text="Birthday:" />

    <TextView
        android:id="@+id/rAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/rBirthday"
        android:layout_below="@+id/rBirthday"
        android:layout_marginTop="28dp"
        android:text="Address: " />

    <EditText
        android:id="@+id/rNameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignBaseline="@+id/rName"
        android:layout_alignBottom="@+id/rName"
        android:layout_toEndOf="@+id/rAddress" />

    <Spinner
        android:id="@+id/rGradeSpinner"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rBirthday"
        android:layout_alignStart="@+id/regTypeText" />

    <Button
        android:id="@+id/rBirthdayField"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Select"
        android:textSize="12sp"
        android:layout_alignBaseline="@+id/rBirthday"
        android:layout_alignBottom="@+id/rBirthday"
        android:layout_alignEnd="@+id/mentorSelection" />

    <EditText
        android:id="@+id/rAddressField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rBirthdayField"
        android:layout_toEndOf="@+id/rAddress"
        android:ems="10"
        android:inputType="textPostalAddress" />

    <Button
        android:id="@+id/createAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp"
        android:onClick="toHome"
        android:text="Create" />

    <TextView
        android:id="@+id/birthdayDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rAddress"
        android:layout_toEndOf="@+id/regTypeText"
        android:text="TextView" />
</RelativeLayout>