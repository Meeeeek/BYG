<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/feedback"
    android:alpha="0.9">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/feedbackText"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="115dp"
        android:gravity="center"
        android:text="If there's something that this app could do better, feel free to send your feedback below! :)"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/feedbackField"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedbackText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/submitFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="150dp"
        android:layout_below="@+id/feedbackField"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView4"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submitFeedback"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:text="* It's completely anonymous so be as honest as possible!" />
</RelativeLayout>
