<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/studentGrade"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="199dp"
        android:layout_y="27dp"
        android:text="GRADE" />

    <TextView
        android:id="@+id/studentBirthday"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="191dp"
        android:layout_y="77dp"
        android:text="07/17/1995" />

    <TextView
        android:id="@+id/studentPhone"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_x="24dp"
        android:layout_y="77dp"
        android:text="201-789-4852" />

    <TextView
        android:id="@+id/studentAddress"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="24dp"
        android:layout_y="54dp"
        android:text="449 Brinkerhoff Ave. Fort Lee, NJ, 07024"
        android:textAlignment="center"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/studentName"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="24dp"
        android:layout_y="26dp"
        android:text="STUDENT NAME" />

    <Button
        android:id="@+id/deleteStudent"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_x="294dp"
        android:layout_y="58dp"
        android:text="delete"
        android:textSize="7sp" />

    <Button
        android:id="@+id/editStudent"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_x="294dp"
        android:layout_y="26dp"
        android:text="edit"
        android:textSize="7sp" />

</AbsoluteLayout>